// Prisma schema for WOD Shuffler
// Uses PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Exercise {
  id        String   @id @default(uuid())
  name      String   @unique
  bodyParts String[]
  duration  Json?
  reps      Json?
  equipment String[]
  intensity Json?
  progression String?
  demo      String?
  type      String   // warmup, strength, metcon
}

model Wod {
  id          String   @id @default(uuid())
  name        String   @unique
  format      String
  description String
  exercises   Json
  equipment   String[]
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  nickname String?
  age      Int?
  passwordResetToken String?
  createdAt DateTime @default(now())
}

model GlobalStats {
  id            Int    @id @default(1)
  wodsGenerated Int    @default(0)
}
